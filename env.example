# cp env.example .env

# ========================================
# üóùÔ∏è  Required Settings (Needed for deployment)
# ========================================

# Private Key of the account to deploy (without 0x)
# Example: 0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef
PRIVATE_KEY=your_private_key_here_with_0x

# ========================================
# üåê Network Settings (Optional)
# ========================================

# Kaia Testnet Settings
KAIA_TESTNET_RPC_URL=https://public-en-kairos.node.kaia.io
